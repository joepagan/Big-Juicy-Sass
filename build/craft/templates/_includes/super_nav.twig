{% for primaryEntries in superNavigation.navigation %}

    {% if primaryEntries.type == 'link' %}
        {% set href = primaryEntries.link %}
        {% if href %}
            {% if primaryEntries.linkText|length > 0 %}
                {% set text = primaryEntries.linkText %}
            {% else %}
                {% set text = primaryEntries.linkEntry.first.title %}
            {% endif %}

            <li class="{% if primaryEntries.linkClass %}{{ primaryEntries.linkClass }}{% endif %} {% if (href in craft.request.getUrl() and href != siteUrl) or (entry is defined and entry.id == "2" and href == siteUrl) %}active{% endif %}">
                <a href="{{ href }}" title="{{ text }}">{{ text }}</a>
            </li>

        {% endif %}

    {% endif %}

{% endfor %}
