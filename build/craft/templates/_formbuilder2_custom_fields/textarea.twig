{%- set id = (id is defined ? id : 'textarea-' ~ random()) %}
{%- set requiredJs = (requiredJs is defined ? requiredJs : null) %}

<div class="field">
	{% if label or instructions %}
		<div class="heading">
			{% if label %}
				<label{% if required is defined and required %} class="required"{% endif %}{% if id %} for="{{ id }}"{% endif %}>
					{{- label|raw -}}
				</label>
			{% endif %}
            {% if (placeholder is defined and placeholder) or (instructions is defined and instructions) %}
        		<p class="sub_label">
        			{%- if placeholder is defined and placeholder %}
        				{{ placeholder }}
        			{% elseif instructions is defined and instructions %}
        				{{ instructions|e }}
        			{% endif %}
        		 </p>
        	{% endif %}
		</div>
	{% endif %}
	<div class="input">
		<textarea
			class="textarea"
			{%- if id is defined %} id="{{ id }}"{% endif %}
			{%- if handle is defined %} name="{{ handle }}"{% endif %}
			{%- if autofocus is defined and autofocus and not craft.request.isMobileBrowser(true) %} autofocus{% endif %}
			{%- if required is defined and required %} required {% endif %}>{{ value is defined ? value : null }}</textarea>
	</div>
</div>
